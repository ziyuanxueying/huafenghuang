<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入预订单地址"
        android:autofillHints="输入预订单地址"
        android:inputType="text" />

    <Button
        android:layout_margin="12dp"
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="start"
        android:text="微信支付（1.0）" />

    <Button
        android:layout_margin="12dp"
        android:id="@+id/ali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alipay"
        android:text="支付宝支付（1.0）" />



    <Button
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="newWx"
        android:text="微信支付（2.0）" />

    <Button
        android:layout_margin="12dp"
        android:id="@+id/newal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="newAli"
        android:text="支付宝支付（2.0）" />

</LinearLayout>
