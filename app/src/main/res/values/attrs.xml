<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="circle_border_width" format="dimension" />
        <attr name="circle_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SettingBar" >
        <!-- 左边 -->
        <attr name="bar_leftText" format="string"/>
        <attr name="bar_leftHint" format="string"/>
        <attr name="bar_leftIcon" format="reference" />
        <attr name="bar_leftColor" format="color" />
        <attr name="bar_leftSize" format="dimension" />
        <!-- 中间 -->
        <attr name="bar_centerText" format="string"/>
        <attr name="bar_centerHint" format="string"/>
        <attr name="bar_centerIcon" format="reference" />
        <attr name="bar_centerColor" format="color" />
        <attr name="bar_centerSize" format="dimension" />
        <attr name="bar_centerVisible" format="boolean"/>
        <!-- 右边 -->
        <attr name="bar_rightText" format="string" />
        <attr name="bar_rightHint" format="string"/>
        <attr name="bar_rightIcon" format="reference" />
        <attr name="bar_rightColor" format="color" />
        <attr name="bar_rightSize" format="dimension" />
        <!-- 分割线 -->
        <attr name="bar_lineVisible" format="boolean" />
        <attr name="bar_lineColor" format="reference|color" />
        <attr name="bar_lineSize" format="dimension" />
        <attr name="bar_lineMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TipFillBar" >
        <!-- TextView -->
        <attr name="tip_tvText" format="string"/>
        <attr name="tip_tvHint" format="string"/>
        <attr name="tip_tvIcon" format="reference" />
        <attr name="tip_tvColor" format="color" />
        <attr name="tip_tvSize" format="dimension" />
        <attr name="tip_tvVisible" format="boolean"/>

        <!-- Edittext -->
        <attr name="tip_etText" format="string"/>
        <attr name="tip_etColor" format="color" />
        <attr name="tip_etSize" format="dimension" />
        <attr name="tip_etBg" format="reference"/>
        <attr name="tip_etHint" format="string"/>
        <attr name="tip_etHintColor" format="color"/>
        <attr name="android:inputType"/>
        <attr name="android:enabled"/>
        <attr name="android:focusable"/>
        <attr name="android:maxLength"/>
        <attr name="android:gravity"/>

        <!-- 分割线 -->
        <attr name="tip_lineVisible" format="boolean" />
        <attr name="tip_lineColor" format="reference|color" />
        <attr name="tip_lineSize" format="dimension" />
        <attr name="tip_lineMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <!-- 是否选中 -->
        <attr name="android:checked" />
        <!-- 是否禁用 -->
        <attr name="android:enabled" />
    </declare-styleable>
</resources>
