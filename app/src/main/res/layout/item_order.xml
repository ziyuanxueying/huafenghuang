<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.primecloud.huafenghuang.ui.home.usercenterfragment.activity.message.MessageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_15"
        android:background="@color/text_pink"
        android:drawableLeft="@mipmap/dingdan"
        android:drawablePadding="@dimen/space_10"
        android:textSize="@dimen/text_13"
        android:textColor="@color/indicator_color_red"
        android:text="订单编号：201712345678"
        android:id="@+id/item_order_num"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textColor="@color/textcolor_one"
            android:layout_marginLeft="@dimen/space_15"
            android:text="VIP购买"
            android:id="@+id/item_order_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:textColor="@color/orange_type"
            android:layout_marginRight="@dimen/space_15"
            android:layout_alignParentRight="true"
            android:text="余额"
            android:id="@+id/item_order_type"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginTop="@dimen/space_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textColor="@color/textcolor_one"
            android:layout_marginLeft="@dimen/space_15"
            android:text="$360"
            android:id="@+id/item_order_price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:textColor="@color/textcolor_three"
            android:layout_marginRight="@dimen/space_15"
            android:layout_alignParentRight="true"
            android:text="2019-04-15 15:00"
            android:drawablePadding="@dimen/space_5"
            android:drawableLeft="@mipmap/time"
            android:id="@+id/item_order_time"/>
    </RelativeLayout>
    <View
        style="@style/VerticalLine10Style"/>
</LinearLayout>
