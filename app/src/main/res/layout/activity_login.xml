<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.primecloud.huafenghuang.ui.user.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/bg" />

        <TextView
            style="@style/text_enter_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_5"
            android:text="@string/string_button_login" />

        <TextView
            style="@style/text_enter_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginTop="@dimen/space_5"
            android:text="@string/string_text_login"
            android:textSize="@dimen/text_15"
            android:id="@+id/text_zhuce"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_200"
        android:background="@drawable/shape_white_sollow">

        <EditText
            android:id="@+id/login_phone"
            android:layout_marginTop="@dimen/space_40"
            style="@style/edit_style"
            android:drawableLeft="@mipmap/ic_phone"
            android:hint="@string/string_edit_login_name"
            android:singleLine="true"
            android:padding="@dimen/space_5"
            android:inputType="phone|number"
            android:maxLength="11"/>

        <EditText
            android:id="@+id/login_password"
            style="@style/edit_style"
            android:digits="qwertyuioplkjhgfdsazxcvbnm1234567890"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="@string/string_edit_login_password"
            android:password="true"
            android:singleLine="true"
            android:padding="@dimen/space_5"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:layout_marginTop="@dimen/space_15">
            <TextView
                android:id="@+id/text_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/string_text_password"
                android:textColor="@color/textcolor_one"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            style="@style/button_style"
            android:text="@string/string_button_login"
            android:layout_marginTop="@dimen/space_20"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:layout_marginTop="@dimen/space_10"
            >
            <TextView
                android:id="@+id/login_xiyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_10"
                android:textColor="@color/textcolor_xiyi"
                android:layout_gravity="center"
                android:text="@string/string_login_xiyi"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_30"
            android:text="@string/string_text_title"
            android:drawableLeft="@drawable/shape_edit_shellow"
            android:drawableRight="@drawable/shape_edit_shellow"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_25"
            android:layout_marginBottom="@dimen/space_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_img_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginRight="@dimen/space_40"
                android:src="@mipmap/ic_wechat" />

            <ImageView
                android:id="@+id/login_img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginRight="@dimen/space_40"
                android:src="@mipmap/ic_qq" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
