<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_material_headrv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/item_material_name"
            style="@style/TextView_15sp_33color"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/item_material_time"
            style="@style/TextView_15sp_33color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"

        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/item_material_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.85"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_material_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全文"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_material_recyclerview"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginRight="14dp"
       />

    <ImageView
        android:id="@+id/item_material_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="14dp"
        android:visibility="gone"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="@dimen/space_15"
        />

    <RelativeLayout
        android:id="@+id/item_material_video_rootview"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/item_material_video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/video_bg"/>

        <ImageView
            android:id="@+id/item_material_video_play"
            android:layout_width="wrap_content"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/kaiguan"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_material_good"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#848484"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/dianzan_normali"/>

        <TextView
            android:id="@+id/item_material_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#848484"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/xiazhai"/>

        <TextView
            android:id="@+id/item_material_copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#848484"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/fuzhi"/>

        <TextView
            android:id="@+id/item_material_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#848484"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/zhuanfa"/>


    </LinearLayout>
    <View
        style="@style/VerticalLine10Style"/>
</LinearLayout>