<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/pop_tip_rootview"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#40000000">




    <TextView
        android:id="@+id/pop_tip_tv"
        android:background="@drawable/shape_download_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="由于功能限制，本篇内容中的全部图片已下载至您的相册，多图分享请到朋友圈或微博相册中手动选择上传。文字已复制，可直接粘贴"


        android:paddingTop="44dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"

        app:layout_constraintDimensionRatio="w,233:142"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tips"

        app:layout_constraintTop_toTopOf="@id/pop_tip_tv"
        app:layout_constraintBottom_toTopOf="@id/pop_tip_tv"

        app:layout_constraintLeft_toLeftOf="@id/pop_tip_tv"
        app:layout_constraintRight_toRightOf="@id/pop_tip_tv"
        />

</android.support.constraint.ConstraintLayout>
