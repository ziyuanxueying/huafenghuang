<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/offline_recycler_item_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/offline_recycler_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_one"
            android:textSize="15sp"
            android:text="青少年心智训练营"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offline_recycler_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="13sp"
                android:textColor="@color/textcolor_two"
                android:ellipsize="end"
                android:maxLength="26"
                />
            <TextView
                android:id="@+id/offline_recycler_item_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/captcah_text_color"
                android:textSize="11sp"
                android:drawableLeft="@mipmap/site"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLength="8"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
