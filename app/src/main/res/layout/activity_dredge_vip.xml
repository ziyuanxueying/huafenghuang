<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#30E5E5E5"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/dredge_account"
                            android:textColor="@color/textcolor_one"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/dredge_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="13300010002"
                            android:textColor="@color/textcolor_one"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/dredge_member_indate_rela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/member_indate"
                            android:textColor="@color/textcolor_one"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/dredge_member_indate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2019-12-15"
                            android:textColor="@color/textcolor_one"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/price"
                            android:textColor="@color/textcolor_one"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/dredge_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="360元/年"
                            android:textColor="@color/indicator_color_red"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver"></View>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_backgroud" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/pay"
                    android:textColor="@color/textcolor_one"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <RadioGroup
                    android:id="@+id/vip_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"

                    >

                    <RadioButton
                        android:id="@+id/pay_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:button="@null"
                        android:drawableLeft="@mipmap/yue"
                        android:drawableRight="@drawable/pay"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/pay_balance"
                        android:textColor="@color/textcolor_one"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver" />

                    <RadioButton
                        android:id="@+id/pay_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:button="@null"
                        android:drawableLeft="@mipmap/weixinzhifu"
                        android:drawableRight="@drawable/pay"
                        android:drawablePadding="10dp"
                        android:text="@string/pay_weixin"
                        android:textColor="@color/textcolor_one"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver" />

                    <RadioButton
                        android:id="@+id/pay_zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:button="@null"
                        android:drawableLeft="@mipmap/zhifubao"
                        android:drawableRight="@drawable/pay"
                        android:drawablePadding="10dp"
                        android:text="@string/pay_zhifubao"
                        android:textColor="@color/textcolor_one"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/driver" />


                </RadioGroup>

                <Button
                    android:id="@+id/immediately_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@mipmap/btn_round"
                    android:text="@string/confirm_open"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/vip_member"
                android:visibility="gone"
                android:textColor="@color/textcolor_one"
                android:textSize="13sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="7dp"
                android:text="@string/equity"
                android:textColor="@color/textcolor_one"

                android:textSize="11sp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>