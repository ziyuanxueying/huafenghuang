<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/comment_item_head_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@color/indicator_color_red"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/comment_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="大白"
                android:textColor="@color/captcah_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="刚刚"
                android:textColor="@color/captcah_text_color"
                android:textSize="11sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/coment_item_conent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="教的好认真啊，很喜欢，加油，看好你"
            android:textColor="@color/textcolor_one"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/comment_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroud_pink"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:text="回复（3）"
            android:textColor="@color/indicator_color_red"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>