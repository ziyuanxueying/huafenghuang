<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <com.primecloud.huafenghuang.widget.MaxLengthEditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/space_5"
        android:background="@drawable/shape_login_input_background"
        android:gravity="left|top"
        android:hint="@string/text_about_suggest"
        android:padding="@dimen/space_13"
        android:scrollbars="vertical"
        android:maxLength="200"
        android:textSize="@dimen/text_13"/>

    <Button
        android:id="@+id/btn_suggest"
        style="@style/button_style"
        android:text="@string/text_btn_suggest" />


</LinearLayout>